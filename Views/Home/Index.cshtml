<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Wedding Planner</title>
</head>

<body>
    @model User


    <div class="wrapper">
        <div class="cover">
        </div>

        <div class="form">

            <form action="/register" method="post">
                <h1>Register</h1>
                <div class="form-group row">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control"></label>
                    <span asp-validation-for="FirstName" class="text-warning"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control"></label>
                    <span asp-validation-for="LastName" class="text-warning"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control"></label>
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control"></label>
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Confirm" class="form-label"></label>
                    <input asp-for="Confirm" class="form-control"></label>
                    <span asp-validation-for="Confirm" class="text-warning"></span>
                </div>
                <div class="col text-center">
                    <button class="btn btn-primary">Register</button>
                </div>

            </form>

            <partial name="LoginPartial"></partial>
        </div>
    </div>
</body>

</html>
