<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Wedding Planner</title>
</head>

<body>
    @model Wedding


    <div class="wrapper">
        <div class="cover">
        </div>
        <div class="weddingFormBox">
            <div class="weddingForm">
                <h2>Plan Your Wedding!</h2>

                <form action="/create-wedding" method="post">
                    <div class="form-group row">
                        <label asp-for="WedderOne" class="form-label"></label>
                        <input asp-for="WedderOne" class="form-control"></label>
                        <span asp-validation-for="WedderOne" class="text-warning"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="WedderTwo" class="form-label"></label>
                        <input asp-for="WedderTwo" class="form-control"></label>
                        <span asp-validation-for="WedderTwo" class="text-warning"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Date" class="form-label"></label>
                        <input asp-for="Date" class="form-control"></label>
                        <span asp-validation-for="Date" class="text-warning"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control"></label>
                        <span asp-validation-for="Address" class="text-warning"></span>
                    </div>
                    <div class="col text-center">
                        <button class="btn btn-primary">Create</button>
                    </div>

                </form>
            </div>

            <div class="createHeaderLinks">
                <a href="/dashboard">Dashboard</a>
                <a href="/logout">Log Out</a>
            </div>

        </div>

    </div>

</body>

</html>
